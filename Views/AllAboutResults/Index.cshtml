@using Microsoft.AspNetCore.Http
@{
    ViewBag.Title = "Its' All About the Results of your Actions";
}
<img src="/Images/weekend.jpg" style="position:absolute;top:auto;left:auto;width:100%;z-index:-1;"/>
<div style="background:white;opacity:.8;padding:3%;border-radius:20px;border:10px inset dodgerblue; width:30%; position:absolute;left:auto;">   
    <h2 style="text-align:center;-webkit-text-stroke:2px black; -webkit-text-fill-color:dodgerblue;">Welcome to the Weekend</h2>
    <h3>@ViewBag.Greeting</h3>
    <h3>@Context.Session.GetString("greet")</h3>
    <h3>@Context.Session.GetString("dayMsg")</h3>

</div>